<?xml version="1.0"?>
<view xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Config/etc/view.xsd">
    <vars module="Swissup_Easytabs">
        <var name="options">{"active": -1, "collapsible": true, "openedState": "active"}</var>
    </vars>
    <media>
        <images module="Magento_Catalog">
            <image id="product_page_image_medium" type="image">
                <width>500</width>
                <height>500</height>
            </image>

            <image id="swatch_image" type="swatch_image">
                <width>100</width>
                <height>100</height>
            </image>
            <image id="swatch_thumb" type="swatch_thumb">
                <width>110</width>
                <height>110</height>
            </image>
            <image id="swatch_image_base" type="swatch_image">
                <width>50</width>
                <height>50</height>
            </image>
            <image id="swatch_thumb_base" type="swatch_thumb">
                <width>110</width>
                <height>110</height>
            </image>
        </images>
    </media>
</view>
